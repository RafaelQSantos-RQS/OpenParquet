{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "openparquet",
  "version": "0.2.0",
  "identifier": "com.rafaelqsantos.openparquet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "openparquet",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false,
        "center": true,
        "maximized": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Visualizador desktop de arquivos Parquet.",
    "longDescription": "OpenParquet é uma ferramenta moderna para visualizar, filtrar e analisar arquivos Apache Parquet. Construído com Rust e DuckDB para velocidade máxima, permite abrir arquivos gigantes instantaneamente.",
    "copyright": "Copyright © 2025 Rafael Santos",
    "category": "Development",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1"
        ],
        "files": {
          "/usr/share/metainfo/com.rafaelqsantos.openparquet.metainfo.xml": "linux/com.rafaelqsantos.openparquet.metainfo.xml"
        }
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    }
  }
}